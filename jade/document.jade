mixin html
  doctype
  html(lang='en-us')&attributes(attributes)
    block

mixin head(obj)
  head&attributes(attributes)
    meta(charset='utf-8')
    -if (obj && obj.zoom)
      meta(name='viewport' content='width=device-width, initial-scale=1')
    -else
      meta(name='viewport' content='width=device-width, initial-scale=1, user-scalable=0')
    -if (obj && !!obj.color)
      meta(name='theme-color' content=obj.color)
    -if (obj && !!obj.description)
      meta(name='description' content=obj.description)
    -if (obj && !!obj.keywords)
      meta(name='keywords' content=obj.keywords)
    -if (obj && !!obj.favicon)
      link(rel='icon' href=obj.favicon)
    -if(obj && !!obj.title)
      title= obj.title
    block

mixin script(url)
  script(src=url)&attributes(attributes)

mixin style(url)
  link(rel='stylesheet' href=url)&attributes(attributes)

mixin image(url)
  img(src=url)&attributes(attributes)
